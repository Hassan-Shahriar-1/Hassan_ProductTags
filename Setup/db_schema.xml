<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.magento.com/xml/ns/dbschema" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="hassan_product_tags" resource="default" engine="innodb" comment="Product Tags">
        <column name="id" xsi:type="int" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column name="product_id" xsi:type="int" nullable="false" comment="Product ID"/>
        <column name="tag" xsi:type="text" nullable="false" length="255" comment="Tag"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
