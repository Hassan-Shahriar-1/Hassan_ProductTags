<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="hassan_product_tags" resource="default" engine="innodb" comment="hassan Product Tags">
        <column name="id" xsi:type="int" nullable="false" identity="true" unsigned="true" comment="ID"/>
        <column name="product_id" xsi:type="int" nullable="false" unsigned="true" comment="Product ID"/>
        <column name="tag" xsi:type="varchar" length="255" nullable="false" comment="Tag"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="HASSAN_TAG_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
    </table>

</schema>
